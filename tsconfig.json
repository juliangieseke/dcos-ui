{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": [
      "es5",
      "es6",
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "listEmittedFiles": true,
    "pretty": true
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "plugins/**/*"
  ],

  "exclude": [
    "node_modules",
    "src/styles/**/*"
  ]
}
